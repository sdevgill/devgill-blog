<main class="main">
  {% for post in collections.post | reverse %}
    <article class="post-entry">
      <span class="date-entry">{{ post.date | shortDate }}</span>
      <h2 class="post-title"><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
      <span class="read-time">{{ post.templateContent | readingTime }}</span>
      </span>
    </article>
  {% endfor %}
</main>
