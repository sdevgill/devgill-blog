<!DOCTYPE html>
<html lang="{{ site.language }}">
<head>
  <!-- Meta -->
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  {% if ignore %}
    <meta name="robots" content="noindex" />
  {% endif %}
  <!-- Title -->
  <title>{{title or site.title }}</title>
  <!-- SEO -->
  <meta name="description" content="{{ description or site.description }}">
  <!-- Favicon -->
  <link rel="icon" href="/favicon.ico" type="image/x-icon">
  <link rel="apple-touch-icon" href="/apple-touch-icon.png">
  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <!-- CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/nprogress@0.2.0/nprogress.min.css">
  <link rel="stylesheet" href="/css/base.css">
  <link rel="stylesheet" href="/css/{{ cssFile }}">
  <!-- JS -->
  <script src="https://cdn.jsdelivr.net/npm/nprogress@0.2.0/nprogress.min.js" defer></script>
  <script src="https://kit.fontawesome.com/cf6539e3d7.js" crossorigin="anonymous" defer></script>
  <script type="module" src="/js/base.js"></script>
  <script type="module" src="{{ jsFile }}"></script>
</head>
<body>

  <header>{% include "nav.njk" %}</header>

  <main>
    {{ content | safe }}
  </main>

  <footer>{% include "footer.njk" %}</footer>

</body>
</html>
