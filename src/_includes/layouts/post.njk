---
title: title
layout: layouts/base.njk
cssFile: blog-post.css
---
<div class="sticky-header">
  <div class="sticky-title"></div>
  <div class="progress-container">
    <div class="progress-bar" id="myBar"></div>
  </div>
</div>

<article class="post-entry">
  <div class="article-meta">
    <span class="author-entry">dev</span>
    <span class="meta-bar">|</span>
    <span class="date-entry">{{ page.date | readableDate }}</span>
    <span class="meta-bar">|</span>
    <span class="read-time">1 min read</span>
    {# <span class="meta-bar">|</span>
    <span class="article-tag"></span> #}
  </div>
  <h1 class="post-title">{{ title }}</h1>
  <div class="post-body">{{ content | safe }}</div>
</article>

<section class="post-actions">
  <a href="/blog" class="link-info">All Posts</a>
</section>

<section class="post-footer">
  <hr id="hr">
  <h2>Enjoying these posts? Subscribe for more</h2>
  <h3>Follow me</h3>
</section>
